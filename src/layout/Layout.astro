---
import Navbar from "../components/Navbar.svelte";
const { title } = Astro.props;
import '../styles/custom.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#14b8a6" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Sit Stand Timer" />
    <meta name="description" content="A productivity timer to help you alternate between sitting, standing, and walking" />
    <title>{title || "Sit Stand Timer"}</title>
  </head>
  <body class="bg-teal-500">
      <Navbar client:load />
    <main class="max-w-3xl mx-auto p-5 text-red-100">
      <slot />
    </main>
  </body>
</html>
